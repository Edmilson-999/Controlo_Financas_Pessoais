<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Resumo das Finanças -->
        <TextView
            android:id="@+id/tv_saldo_atual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Saldo Atual: 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_total_receitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de Receitas: 0.00"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_total_despesas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de Despesas: 0.00"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Botões -->
        <Button
            android:id="@+id/btn_adicionar_receita"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Adicionar Receita"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_adicionar_despesa"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Adicionar Despesa"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_visualizar_transacoes"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Visualizar Transações"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_grafico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Gráfico"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
